.coupon-item {
  width: 100%;
  height: auto;
  display: table;
  border-radius: 10rpx;
  padding: 34rpx 32rpx 34rpx 0;
  margin-top: 22rpx;
  border: 1px solid #eeeeee;
  position: relative;
  box-sizing: border-box;
  background-color: white;
  overflow: hidden;
}
.coupon-item .coupon-money {
  width: 208rpx;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  float: left;
  padding: 26rpx 20rpx 26rpx 0;
  border-style: none dotted none none;
  border-color: #eeeeee;
  /* width:465upx; */
}
.coupon-item .coupon-money .nick {
  width: 100%;
  height: 50rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #999999;
}
.coupon-item .coupon-money .tit {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #999999;
}
.coupon-item .coupon-money .demand {
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #999999;
}
.coupon-item .coupon-money .layof {
  height: 48rpx;
  font-size: 52rpx;
  color: #ff9000;
  font-weight: bold;
  display: flex;
}
.coupon-item .coupon-money .end_time {
  height: 30rpx;
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #999999;
}
.coupon-item .stamp {
  font-size: 26rpx;
  color: #999999;
  padding: 20rpx;
  position: absolute;
  top: 50%;
  left: 60%;
  -webkit-transform: rotate(30deg);
          transform: rotate(30deg);
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #999999;
  z-index: 10;
}
.coupon-item .stamp::after {
  width: 70rpx;
  height: 70rpx;
  padding: 20rpx;
  content: '';
  position: absolute;
  border: 1px solid #999999;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  border-radius: 50%;
}
.coupon-item:after {
  width: 40rpx;
  height: 20rpx;
  position: absolute;
  left: 208rpx;
  top: -1px;
  border-radius: 0 0 40rpx 40rpx;
  content: "";
  display: block;
  background: #F5F5F5;
  border: 1px solid #eeeeee;
  border-top: 0px;
}
.coupon-item:before {
  width: 40rpx;
  height: 20rpx;
  position: absolute;
  left: 208rpx;
  bottom: -1px;
  border-radius: 40rpx 40rpx 0 0;
  content: "";
  display: block;
  background: #F5F5F5;
  border: 1px solid #eeeeee;
  border-bottom: 0px;
}

.rightInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0 0 58rpx;
}
.rightInfo .info_left {
  color: #999999;
}
.rightInfo .info_left .couponName {
  font-size: 28rpx;
  color: #0B0B0B;
}
.rightInfo .info_left .couponIntroduce {
  font-size: 24rpx;
  margin: 4rpx 0;
}
.rightInfo .info_left .couponTime {
  font-size: 24rpx;
  -webkit-transform: scale(0.83);
          transform: scale(0.83);
  -webkit-transform-origin: 0 0;
          transform-origin: 0 0;
}
.rightInfo .info_right {
  width: 36rpx;
  height: 36rpx;
  flex-shrink: 0;
}
.rightInfo .info_right .circle {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2rpx solid #DDDDDD;
}
.rightInfo .info_right .chooseImg {
  width: 100%;
  height: 100%;
}

